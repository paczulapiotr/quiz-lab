@page
@using Quiz.Master.Pages

@model IndexModel
@{
    ViewData["Title"] = "Home Page";
    var request = HttpContext.Request;
    var baseUrl = $"{request.Scheme}://{request.Host}";
}
<style>
    :root {
        --primary: #4361ee;
        --secondary: #3f37c9;
        --accent: #4cc9f0;
        --light: #f8f9fa;
        --dark: #212529;
        --success: #4caf50;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--light);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    header {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        padding: 1.5rem;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    header h1 {
        margin: 0;
        font-weight: 600;
        letter-spacing: 1px;
    }

    header p {
        margin: 0.5rem 0 0;
        font-weight: 300;
        opacity: 0.9;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .main-actions {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin: 3rem 0;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-block;
        text-decoration: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: var(--primary);
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background-color: var(--secondary);
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .btn-secondary {
        background-color: var(--light);
        color: var(--dark);
        border: 1px solid var(--dark);
    }

    .btn-secondary:hover {
        background-color: var(--dark);
        color: var(--light);
    }

    .btn-icon {
        margin-right: 0.5rem;
    }

    footer {
        margin-top: auto;
        padding: 1rem;
        text-align: center;
        font-size: 0.9rem;
    }

    .footer-links {
        margin-top: 1rem;
    }

    .btn-small {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>

<header>
    <h1>Quiz Lab</h1>
    <p>Interactive multiplayer quiz platform</p>
</header>

<div class="container">
    <div class="main-actions">
        <a target="_blank" href="@(baseUrl + "/master_ui")" class="btn btn-primary">
            <span class="btn-icon">üëë</span> Open HOST
        </a>
        <a target="_blank" href="@(baseUrl + "/slave_ui")" class="btn btn-primary">
            <span class="btn-icon">üéÆ</span> Open PLAYER
        </a>
    </div>
</div>

<footer>
    <div class="footer-links">
        <a target="_blank" href="@Model.StrapiUrl"
            class="btn btn-secondary btn-small">
            <span class="btn-icon">‚öôÔ∏è</span> Content Management
        </a>
    </div>
</footer>